<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="parallel execution" thread-count="5" parallel="methods">
	<listeners>
		<listener
			class-name="com.sevenrmartsupermarket.listeners.ExtentReporter"></listener>
	</listeners>
	<test name="smoke">
		<classes>
			<class name="com.sevenrmartsupermarket.tests.AdminUsersTest">
				<methods><include name="verifyNewUserAdd"></include></methods>
			</class>
		</classes>
	</test>
	<test name="regression">
		<classes>
			<class name="com.sevenrmartsupermarket.tests.LoginTest">
				<methods><include name="verifyUserLogin"></include></methods>
			</class>
		</classes>
	</test>
	<test name="sanity">
		<classes>
			<class name="com.sevenrmartsupermarket.tests.ManageUsersTest">
				<methods><include name="verifySearchUser"></include></methods>
			</class>
		</classes>
	</test>
</suite>